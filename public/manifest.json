{
  "manifest_version": 2,
  "name": "Productivity Maximizer",
  "version": "0.1",
  "description": "Maximize productivity",
  "icons": {
    "16": "favicon.ico",
    "24": "favicon.ico",
    "32": "favicon.ico",
    "64": "favicon.ico"
  },
  "background": {
    "scripts": ["static/js/backgroundListener.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
