{
  "manifest_version": 2,
  "name": "Productivity Maximizer",
  "version": "0.1",
  "description": "Maximize productivity",
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["static/js/backgroundListener.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "*://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
